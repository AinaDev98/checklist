{% extends 'admin.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <div class="bg-dark pt-2 pb-1">
        <h4 class="text-white text-center">LISTES</h4>
    </div>

    <div class="container mt-lg-5">
        <div class="text-center">
            <a href="{{ path('app_register') }}" class="btn btn-default text-primary"><i class="fad fa-add"></i> Ajouter un nouveau</a>
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">Nom d'utilisateur</th>
                        <th scope="col"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in readUser %}
                        <tr>
                            <th scope="row">{{ user.email }}</th>
                            <th class="text-end"><a href="{{ path('app_delete_user', {id : user.id}) }}" class="btn btn-default text-danger"><i class="fad fa-trash"></i> Supprimer</a></th>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}